<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item  android:left="1dp" android:right="1dp">

                <shape>
                    <gradient android:angle="270"
                        android:endColor="#001B1B1B" android:startColor="#0030302F" />
                    <corners  android:radius="200dp" />

                </shape>
            </item>
            <item android:bottom="10dp" android:left="1dp" android:right="1dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#001B1B1B" android:startColor="#001B1B1B" />
                    <corners android:radius="400dp" />
                    <padding android:bottom="1dp"
                         android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>